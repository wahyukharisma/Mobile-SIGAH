<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wk.sigah.controller.ForgotPassword"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/Hint"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgBackHome"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/back_icon"
                android:clickable="true"
                android:onClick="onClickBack"/>
            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="Forgot Password"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textColor="@color/black"
                    android:text="Enter your email"/>
                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@android:color/transparent"
                    android:hint="Email"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint"
                    android:inputType="textEmailAddress"
                    android:drawableRight="@drawable/email_icon"/>
                <View
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Hint"/>
                <TextView
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/notifForgotPassword"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />
                <Button
                    android:id="@+id/btnSend"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="send"
                    android:background="@drawable/button_style_one"
                    android:onClick="onClickSend"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
