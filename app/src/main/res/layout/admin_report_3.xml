<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/sigahlogo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:gravity="center"
                android:text="P.Mangkubumi No.18, Yogyakarta 55233"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:gravity="center"
                android:text="Phone.(0274)487711"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:clickable="true"
                android:onClick="onClickBackListener"
                android:src="@drawable/back_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/Hint" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25sp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Report Total Customer in Every Room Type"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_marginRight="15dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:textColor="@color/black"
                    android:text="Choose Year "/>
                <Spinner
                    android:id="@+id/spinYear"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_button_yellow"></Spinner>
                <Button
                    android:id="@+id/btnCreate"
                    android:layout_marginLeft="10dp"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_style_one"
                    android:text="CREATE"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:onClick="onClickBtnCreate"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/main1">

                        <TableRow>

                            <TextView
                                android:layout_marginLeft="5dp"
                                android:width="25dp"
                                android:gravity="center"
                                android:text="No"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:width="100dp"
                                android:gravity="center"
                                android:text="Room Type"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:width="70dp"
                                android:gravity="center"
                                android:text="Group"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:width="70dp"
                                android:gravity="center"
                                android:text="Personal"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:width="90dp"
                                android:gravity="center"
                                android:text="Total"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:layout_marginTop="5dp"
                            android:background="@color/Hint">

                            <TextView
                                android:layout_marginLeft="5dp"
                                android:width="25dp"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:width="100dp"
                                android:gravity="center"
                                android:text="Superior"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtGroupSup"
                                android:width="70dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtPersonalSup"
                                android:width="70dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtTotalSup"
                                android:width="90dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                        </TableRow>

                        <TableRow android:background="@color/line">

                            <TextView
                                android:layout_marginLeft="5dp"
                                android:width="25dp"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:width="100dp"
                                android:gravity="center"
                                android:text="Double Deluxe"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtGroupDD"
                                android:width="70dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtPersonalDD"
                                android:width="70dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtTotalDD"
                                android:width="90dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                        </TableRow>

                        <TableRow android:background="@color/Hint">

                            <TextView
                                android:layout_marginLeft="5dp"
                                android:width="25dp"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:width="100dp"
                                android:gravity="center"
                                android:text="Executive Deluxe"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtGroupED"
                                android:width="70dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtPersonalED"
                                android:width="70dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtTotalED"
                                android:width="90dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                        </TableRow>

                        <TableRow android:background="@color/line">

                            <TextView
                                android:layout_marginLeft="5dp"
                                android:width="25dp"
                                android:gravity="center"
                                android:text="4"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:width="100dp"
                                android:gravity="center"
                                android:text="Junior Suite"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtGroupJS"
                                android:width="70dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtPersonalJS"
                                android:width="70dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtTotalJS"
                                android:width="90dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                        </TableRow>

                        <TableRow
                            android:layout_marginTop="10dp"
                            android:background="@color/main1">

                            <TextView
                                android:layout_marginLeft="5dp"
                                android:width="25dp"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:width="100dp"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:width="70dp"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:width="70dp"
                                android:gravity="center"
                                android:text="Total"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtTotalAll"
                                android:width="90dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </TableRow>
                    </TableLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:layout_marginTop="50dp"
                        android:orientation="vertical">

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chartReportThree"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp" />
                    </LinearLayout>

                    <Button
                        android:layout_gravity="right"
                        android:id="@+id/btnCreatePdf"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="30dp"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/button_style_one"
                        android:text="Create PDF"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:onClick="onClickBtnCreatePdf"/>
                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>