<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.wk.sigah.controller.FragmentHome"
    android:background="@color/colorPrimary">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.example.wk.sigah.controller.CustomViewPager
                android:id="@+id/viewImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_margin="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search Room"
                        android:textColor="@color/main1"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Branch of the Grand Atma Hotel"
                        android:textColor="@color/black" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/branch_icon"/>

                        <Spinner
                            android:id="@+id/spinBranch"
                            android:layout_width="250dp"
                            android:layout_height="25dp"
                            android:background="@drawable/background_button_yellow"
                            android:gravity="center"
                            android:spinnerMode="dropdown">
                        </Spinner>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:text="Check In"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/check_in"/>
                        <TextView
                            android:id="@+id/txtDateChooser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:onClick="onClickDate"
                            android:text="Choose Date"
                            android:textColor="@color/Hint"
                            android:textSize="14dp" />
                    </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/duration_icon"/>
                            <Spinner
                                android:gravity="center"
                                android:id="@+id/spinDuration"
                                android:layout_width="65dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="5dp"
                                android:spinnerMode="dropdown"
                                android:background="@drawable/background_button_yellow">
                            </Spinner>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:text="Date Check Out"/>
                        <TextView
                            android:id="@+id/txtCheckOut"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/Hint"
                            android:text="-"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="25dp">
                        <Button
                            android:id="@+id/btnSearch"
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:text="Search"
                            android:background="@drawable/button_style_one"
                            android:onClick="onClickSearchListener"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageFacility1"
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:src="@drawable/meetingroomhorizontal"
                    android:onClick="onClickImageFacilty1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/main1"
                        android:text="Meeting Room"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"/>
                    <View
                        android:layout_marginTop="3dp"
                        android:layout_width="50dp"
                        android:layout_height="2dp"
                        android:background="@color/Hint"/>
                    <TextView
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lorem_ipsum"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageFacility2"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:clickable="true"
                    android:src="@drawable/dinnerhorizotal"
                    android:onClick="onClickImageFacilty2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/main1"
                        android:text="Dinner Package"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"/>
                    <View
                        android:layout_marginTop="3dp"
                        android:layout_width="50dp"
                        android:layout_height="2dp"
                        android:background="@color/Hint"/>
                    <TextView
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lorem_ipsum"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageFacility3"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@drawable/home4"
                    android:clickable="true"
                    android:onClick="onClickImageFacilty3"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/main1"
                        android:text="Public Pool"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"/>
                    <View
                        android:layout_marginTop="3dp"
                        android:layout_width="50dp"
                        android:layout_height="2dp"
                        android:background="@color/Hint"/>
                    <TextView
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lorem_ipsum"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
