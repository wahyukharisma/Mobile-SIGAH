<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wk.sigah.controller.FragmentHistory"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/sigahlogo"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textColor="@color/main1"
                android:text="History Reservation"
                android:textSize="14sp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/filter_icon" />
            <Spinner
                android:id="@+id/spinFilter"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:background="@drawable/background_button_yellow"
                android:spinnerMode="dropdown">
            </Spinner>
            <Button
                android:id="@+id/btnSearch"
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="@drawable/button_style_one"
                android:text="Search"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:onClick="setOnClickBtnSearch"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/line">
            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></RelativeLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
