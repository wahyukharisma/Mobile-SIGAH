<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:background="@color/colorPrimary"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@color/black"
                android:text="BOOKING INFORMATION"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <View
                android:layout_gravity="center"
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:textColor="@color/black"
                    android:text="Purchase on,"/>
                <TextView
                    android:id="@+id/txtDateRes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Date"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <View
                android:layout_gravity="center"
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:textColor="@color/black"
                    android:text="ID Booking,"/>
                <TextView
                    android:id="@+id/txtIDRes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ID Res"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <View
                android:layout_gravity="center"
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="20dp"
                    android:textColor="@color/black"
                    android:text="Booking Successfully"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/check_icon"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"/>
            </LinearLayout>
            <View
                android:layout_gravity="center"
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/main1"
                android:orientation="vertical">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Cancellation policy"
                    android:textStyle="bold" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:text="This reservation is non-refundable"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/cancelMessage"
                    android:textSize="10sp"/>
                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/button_style_one"
                    android:text="Cancel Reservation"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>